{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "es6"
    ],
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "paths": {
      "@/src/*": [
        "src/*"
      ],
      "@/components/*": [
        "src/components/*"
      ],
      "@/pages/*": [
        "src/pages/*"
      ],
      "@/styles/*": [
        "src/styles/*"
      ]
    },
    "module": "esnext",
    "skipLibCheck": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "/*.ts",
    "/*.tsx",
    "/*.js",
    "/*.jsx",
    "app//*",
    "components//*",
    "src//*",
    "lib//*"
  ],
  "exclude": [
    "node_modules",
    "/*.spec.ts",
    "/*.spec.tsx",
    ".next",
    "out"
  ],
  "plugins": [
    {
      "name": "next"
    }
  ]
}